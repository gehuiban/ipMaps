<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	<style name="Header">
		<item name="android:textColor">@color/colorPrimaryDark</item>
		<item name="android:textStyle">normal|bold</item>
		<item name="android:textSize">@dimen/actionbar_title_text_size</item>
		<item name="android:paddingLeft">@dimen/padding_left</item>
		<item name="android:paddingRight">@dimen/padding_left</item>
		<item name="android:paddingTop">@dimen/padding_above</item>
		<item name="android:paddingBottom">@dimen/padding_below</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">left</item>
	</style>
	<style name="TxtView">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textStyle">normal|bold</item>
		<item name="android:layout_margin">@dimen/line_width_stroke</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">left</item>
	</style>
	<style name="EditTxt">
		<item name="android:inputType">number</item>
		<item name="android:textCursorDrawable">@null</item>
		<item name="android:textColor">@color/colorPrimaryDark</item>
		<item name="android:textColorHint">@color/hint_color</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:paddingLeft">@dimen/padding_left</item>
		<item name="android:textStyle">normal|bold</item>
		<item name="android:background">@color/white</item>
	</style>


</resources>
